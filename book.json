{
  "title": "越过山丘",
  "author": "lviter",
  "description": "关注点分离",
  "links": {
    "sidebar": {
      "GitHub": "https://github.com/lviter/professional"
    }
  },
  "language": "zh-hans",
  "plugins": [
    "expandable-chapters",
    "copy-code-button",
    "page-footer-ex",
    "anchor-navigation-ex",
    "expandable-chapters-small",
    "prism",
    "-highlight",
    "-lunr",
    "-search",
    "theme-comscore",
    "search-pro",
    "splitter",
    "back-to-top-button",
    "advanced-emoji",
    "pageview-count",
    "-sharing",
    "sharing-plus",
    "insert-logo",
    "donate"
  ],
  "pluginsConfig": {
    "page-footer-ex": {
      "copyright": "Copyright & copy lviter@163.com",
      "markdown": true,
      "update_label": "<i>updated</i>",
      "update_format": "YYYY-MM-DD HH:mm:ss"
    },
    "prism": {
      "css": [
        "prismjs/themes/prism-solarizedlight.css"
      ],
      "lang": {
        "flow": "typescript"
      }
    },
    "insert-logo": {
      "url": "static/images/qrcode_lviter.png",
      "style": "background: none; max-height: 30px; min-height: 30px"
    },
    "sharing": {
      "douban": false,
      "facebook": false,
      "google": true,
      "line": true,
      "qq": false,
      "qzone": true,
      "weibo": true,
      "whatsapp": false,
      "all": [
        "douban",
        "facebook",
        "google",
        "hatenaBookmark",
        "instapaper",
        "linkedin",
        "twitter",
        "weibo",
        "messenger",
        "whatsapp"
      ]
    },
    "donate": {
      "wechat": "static/image/donate.png",
      "title": "欢迎小哥/小妹",
      "button": "打赏",
      "wechatText": "微信打赏"
    }
  },
  "ignores": [
    "_book",
    "node_modules"
  ]
}

