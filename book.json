{
  "title": "越过山丘",
  "author": "lviter",
  "description": "关注点分离",
  "links": {
    "sidebar": {
      "GitHub": "https://github.com/lviter/professional"
    }
  },
  "language": "zh-hans",
  "plugins": [
    "expandable-chapters",
    "copy-code-button",
    "page-footer-ex",
    "anchor-navigation-ex",
    "expandable-chapters-small",
    "prism",
    "-highlight",
    "-lunr",
    "-search",
    "theme-comscore",
    "search-pro",
    "splitter",
    "back-to-top-button",
    "advanced-emoji",
    "pageview-count",
    "insert-logo"
  ],
  "pluginsConfig": {
    "page-footer-ex": {
      "copyright": "Copyright & copy lviter@163.com",
      "markdown": true,
      "update_label": "<i>updated</i>",
      "update_format": "YYYY-MM-DD HH:mm:ss"
    },
    "prism": {
      "css": [
        "prismjs/themes/prism-solarizedlight.css"
      ],
      "lang": {
        "flow": "typescript"
      }
    },
    "insert-logo": {
      "url": "static/images/qrcode_lviter.png",
      "style": "background: none; max-height: 30px; min-height: 30px"
    }
  },
  "sharing": {
    "facebook": true,
    "twitter": true,
    "weibo": true,
    "qq": true,
    "all": [
      "douban",
      "google",
      "qzone",
      "linkedin"
    ]
  },
  "ignores": [
    "_book",
    "node_modules"
  ]
}

